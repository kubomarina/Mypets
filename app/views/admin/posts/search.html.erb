 <div class= "continer">
  <div class="row">
   <div class="col-4">
    <table class="table table-hover table-inverse">
     <ul>
      <% @tag_lists.each do |list| %>
       <li>
        <%= link_to search_admin_posts_path(tag_id: list.id) do %>
        <%= list.tag_name %>
        <% end %>
       </li>
      <% end %>
     </ul>
    </table>
   </div>

   <div class="col-8">
    <h4>タグが"<%= @tag.tag_name %>"の投稿一覧</h4>
     <table class="table table-hover table-inverse table-sm">
      <tr>
       <th>ユーザ</th>
       <th>タイトル</th>
       <th></th>
      </tr>
      <% @posts.each do |post| %>
      <tr>
       <td>
        <%= attachment_image_tag post.user,:profile_image, :fill, 70, 70, format: 'jpeg', fallback: "no_image.jpg", size: '70x70' %><br>
        <%= link_to user_path(post.user) do %>
        <%= post.user.owner_name %>
        <% end %>
       </td>
       <td>
        <%= link_to post_path(post.id) do %>
        <%= post.title %>
        <% end %>
       </td>
       <td><%= attachment_image_tag post, :image, :fill, 200, 250, format: 'jpeg', fallback: "no_image.jpg", size: '200x150' %></td>
      </tr>
     </table>
    <% end %>
   </div>
  </div>
  </div>