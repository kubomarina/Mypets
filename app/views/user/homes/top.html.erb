<div class="container">
  <h3>みんなの投稿</h3>
  <h4>タグ一覧:</h4>
  <% @tag_lists.each do |list| %>
  <%= link_to search_posts_path(tag_id: list.id) do %>
  <%= list.tag_name %>
  <%= "(#{list.posts.count})" %>
  <% end %>
  <% end %>
 </div>

 <table class="table table-hover table-inverse table-sm">
  <tr>
   <th>タイトル</th>
   <th>画像</th>
   <th>ユーザー名</th>
   <th>コメント</th>
   <th>いいね</th>
   <th>投稿日</th>
   <th></th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
   <td>
    <%= link_to post_path(post) do %>
    <%= post.title %>
    <% end %>
   </td>
   <td>
    <%= attachment_image_tag post, :image, :fill, 200, 150, format: 'jpeg' %>
    <% if post.video.attached? %>
     <video src="<%= rails_blob_path(post.video) %>"width="200" height="150"type="video/mp4" controls></video>
    <% end %>
   </td>
   <td>
    <%= link_to user_path(post.user) do %>
    <%= attachment_image_tag post.user, :profile_image, :fill, 70,70, format: 'jpeg',fallback: "no_image.jpg" %><br>
    <% end %>
    <%= post.user.owner_name %>
   </td>
   <td><%= link_to "コメント#{post.comments.count}件", post_path(post.id) %></td>
   <td><%= "★#{post.favorites.count}" %></td>
   <td>
    <%= post.created_at.strftime('%Y/%m/%d') %>
   </td>
      <% if post.user == current_user %>
   <td>
    <%= link_to post_path(post), method: :delete do %>
    <button class="btn btn-danger">削除</button>
    <% end %>
   </td>
   <% end %>
   <% end %>
  </table>
 </div>
</div>

 <%= paginate @posts %>
