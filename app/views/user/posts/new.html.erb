<h3>投稿フォーム</h3>
<%= form_with model: @post, local:true do |f| %>

<h4>タイトル</h4>
<%= f.text_field :title %>

<h4>画像</h4>
<%= f.attachment_field :image %>


<h4>ひとこと</h4>
<%= f.text_field :body %>

<h4>タグ設定</h4>
<%= f.text_field :tag_name, value: @task.tag_list.join(','), class: "form-control" %>

<%= f.submit '投稿' %>

<% end %>